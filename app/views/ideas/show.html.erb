<div class="container mt-3">
    <% if @idea.errors.present? %>
        <p class="form-errors">
        <%= @idea.errors.full_messages.join(", ") %>
        </p>
    <% end %>
    <div class = "form-group">
        <h2>Idea</h2>
        <b><%= @idea.title%></b>
        <p><%= @idea.body%></p>
    </div>
    <small class = "btn btn-outline-primary">
        <%= link_to 'Delete', idea_path(@idea.id), method: :delete, data: {confirm: "For real?"} %>
    </small>
    <small class = "btn btn-outline-primary">
        <%= link_to 'Edit', edit_idea_path(@idea.id) %>
    </small>
</div>

<div class="container mt-3">
    <%= form_with(model: [@idea, @review], local: true) do |form|%>
        <div class="form-group">
            <%= form.label :Review%>
            <%= form.text_area :body, class: "form-control" %>
        </div>
            <%= form.submit 'Place a review', class: "btn btn-outline-primary"%>
    <% end %>
</div>

<div class="container mt-4">
    <h4>Reviews</h4>
</div>
<div class = "container mt-3">
    <% @reviews.each do |review| %>
        <div class = "border rounded container mt-3 ">
            <b><%=review.body%></b>
            <small><%=review.created_at%></small>
            <small class='btn btn-outline-primary'>
                <%= link_to "Delete", idea_review_path(@idea.id, review.id), method: :delete, data: {confirm: "you sure?"}%>
            </small>
        </div>
    <% end %>
</div>